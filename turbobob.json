{
	"for_description_of_this_file_see": "https://github.com/function61/turbobob",
	"version_major": 1,
	"project_name": "onni",
	"project_emoji_icon": "ðŸ˜Š",
	"builders": [
		{
			"name": "default",
			"uses": "docker://fn61/buildkit-golang:20210208_0951_8496e47f",
			"mount_destination": "/workspace",
			"workdir": "/workspace",
			"dev_http_ingress": "80",
			"commands": {
				"build": ["bin/build.sh"],
				"dev": ["bash"]
			},
			"dev_shell_commands": [
				{ "command": "rel/happy-api", "important": true }
			]
		},
		{
			"name": "publisher",
			"uses": "docker://fn61/buildkit-publisher:20200228_1755_83c203ff",
			"mount_destination": "/workspace",
			"commands": {
				"publish": ["publish-gh.sh", "function61/happy-api", "rel/"],
				"dev": ["bash"]
			},
			"pass_envs": [
				"GITHUB_TOKEN",
				"EVENTHORIZON"
			]
		}
	],
	"os_arches": {
		"linux-amd64": true
	}
}
